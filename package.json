{
  "name": "@gander-tools/n8n-backup",
  "version": "0.1.0",
  "description": "CLI utility for full backup and restore of n8n workflows, credentials, and tags via REST API",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gander-tools/n8n-backup.git"
  },
  "bugs": {
    "url": "https://github.com/gander-tools/n8n-backup/issues"
  },
  "homepage": "https://github.com/gander-tools/n8n-backup#readme",
  "author": {
    "name": "Adam Gąsowski",
    "url": "https://github.com/gander"
  },
  "contributors": [
    {
      "name": "Adam Gąsowski",
      "url": "https://github.com/gander"
    }
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "n8n-backup": "dist/cli.js"
  },
  "files": ["dist", "README.md", "LICENSE"],
  "engines": {
    "bun": ">=1.3.0",
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts src/cli.ts --outdir dist --target node --minify",
    "test": "bun test tests/unit/",
    "test:unit": "bun test tests/unit/",
    "test:integration": "bun test tests/integration/",
    "test:all": "bun test",
    "test:watch": "bun test --watch tests/unit/",
    "test:coverage": "bun test --coverage tests/unit/",
    "test:coverage:all": "bun test --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc --noEmit",
    "prepare": "lefthook install",
    "ci": "bun run format:check && bun run lint && bun run typecheck && bun run test:coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "bun-types": "latest",
    "lefthook": "^1.9.1",
    "typescript": "^5.9.0"
  },
  "dependencies": {
    "pocketbase": "^0.26.3"
  },
  "keywords": [
    "n8n",
    "backup",
    "restore",
    "cli",
    "workflow",
    "automation",
    "pocketbase",
    "bun",
    "typescript"
  ]
}
